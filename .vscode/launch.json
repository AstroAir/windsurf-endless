{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension (Dev)",
      "type": "extensionHost",
      "request": "launch",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "outFiles": ["${workspaceFolder}/dist/extension/*.js"],
      "preLaunchTask": "dev",
      "env": {
        "VITE_DEV_SERVER_URL": "http://localhost:5173"
      }
    },
    {
      "name": "Run Extension (Production)",
      "type": "extensionHost",
      "request": "launch",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "outFiles": ["${workspaceFolder}/dist/extension/*.js"],
      "preLaunchTask": "build"
    },
    {
      "name": "Extension Tests",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/__tests__/out/extension/suite"
      ],
      "outFiles": ["${workspaceFolder}/__tests__/out/**/*.js"],
      "preLaunchTask": "compile-tests"
    }
  ]
}
